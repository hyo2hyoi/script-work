    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="touch.js"></script>
    <script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
    <script>
        $(function(){
            var start_x, end_x;
      
            $('.box_list ul li').on('touchstart', function(event){
                console.log(event);
                start_x = event.originalEvent.touches[0].pageX;
                //clientX? pageX? 차이점 (뭐가 다른건지 이해안됨!)
                //clientX: 브라우저 창(Viewport)의 왼쪽 위를 기준으로 한 좌표
                //pageX: 문서 전체의 왼쪽 위를 기준으로 한 좌표
                console.log(start_x);
            });

            $('.box_list ul li').on('touchend mouseup', function(event){
                end_x = event.originalEvent.changedTouches[0].pageX;
                console.log(end_x);
      
                if (start_x > end_x) {
                    $(this).animate({'right':'145px'}, 500);
                } else {
                    $(this).animate({'right':'0'}, 500);
                }
            });
        });
        </script>
    <title>touch event</title>
    <style>
        html, body{height:100%;}
